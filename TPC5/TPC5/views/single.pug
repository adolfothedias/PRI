extends layout 
block content 
    .w3-container 
        .w3-card-4
            header.w3-ontainer.w3-teal
                h3 Lista de Alunos
            .w3-container
                table.w3-table-all
                    tr  
                        th Identificador 
                        th Nome
                        th Curso
                        th Notas
                        th Apagar Aluno
                        tr 
                            td= aluno.identificador
                            td= aluno.nome  
                            td= aluno.curso
                            td 
                                .w3-container
                                  table.w3-table-all
                                    tr
                                      th Indicador
                                      th Nota
                                      th Apagar Nota
                                    each val in aluno.notas
                                      td= val.indicador
                                      td= val.nota
                                      td
                                            button.w3-button.w3-blue-grey(onclick="apagaNota('" + aluno.identificador +"','" + val.indicador +"')") Apagar                                  
                            td
                                button.w3-button.w3-blue-grey(onclick="apagaAluno('" + aluno.identificador + "')") Apagar 
            h3 Adicionar uma Nota
            .w3-container
                form.w3-container(action='/alunos/' + aluno.identificador + '/notas' method='POST')
                    label
                        b Indicador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='indicador')
                    label
                        b Nota
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nota')
                    input.w3-input.w3-blue-grey(type='submit' value='Adicionar')
            footer.w3-container.w3-teal
                address Gerado por Gestão de Alunos App:
                    a(href='/alunos') Voltar à Página Principal