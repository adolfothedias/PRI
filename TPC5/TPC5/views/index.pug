extends layout 
block content 
    .w3-container 
        .w3-card-4
            header.w3-ontainer.w3-teal
                h3 Lista de Alunos
            .w3-container
                table.w3-table-all
                    tr  
                        th Identificador 
                        th Nome
                        th Curso
                        th Notas
                        th Apagar Aluno
                        th Ver Aluno
                    each al in lista 
                        tr 
                            td= al.identificador
                            td= al.nome  
                            td= al.curso
                            td 
                                .w3-container
                                  table.w3-table-all
                                    tr
                                      th Indicador
                                      th Nota
                                      th Apagar Nota
                                    each val in al.notas
                                      tr
                                        td= val.indicador
                                        td= val.nota
                                        td
                                            button.w3-button.w3-blue-grey(onclick="apagaNota('" + al.identificador + "','" + val.indicador +"')") Apagar                                           
                            td
                                button.w3-button.w3-blue-grey(onclick="apagaAluno('" + al.identificador + "')") Apagar
                            td
                                button.w3-button.w3-blue-grey(onclick="verAluno('" + al.identificador + "')") Ver
            h3 Registo de um aluno
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    label
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-input.w3-blue-grey(type='submit' value='Adicionar')
            footer.w3-container.w3-teal
                address Gerado por Gestão de Alunos App:
                    a(href='/alunos') Voltar à Página Principal